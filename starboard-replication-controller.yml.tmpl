apiVersion: v1

kind: ReplicationController

metadata:
  name: starboard-rc-<%= version %>-production

spec:
  replicas: 1
  selector:
    app: starboard
    deployment: <%= version %>
    environment: production

  template:
    metadata:
      labels:
        app: starboard
        deployment: <%= version %>
        environment: production

    spec:
      restartPolicy: Always
      volumes:
        - name: secret-volume
          secret:
            secretName: starboard-secret-prod
      containers:
        - name: starboard
          image: us.gcr.io/starboard-1224/starboard:<%= version %>
          imagePullPolicy: Always
          ports:
            - containerPort: 80
          volumeMounts:
            - name: secret-volume
              readOnly: true
              mountPath: /etc/secret-volume
